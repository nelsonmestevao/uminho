root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
end_of_line = lf
insert_final_line = true

[*.{c, java}]
indent_size = 4

[*.hs]
indent_size = 2

[Makefile]
indent_style = tab
indent_size = 4

[*.md]
max_line_length = 80

[*.tex]
max_line_length = 80
